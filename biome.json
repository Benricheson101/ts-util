{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

  "files": {
    "includes": [
      "src/**",
      "lib/**",
      "tsup.config.js",
      "*.json",
      "!build",
      "!dist",
      "!node_modules",
      "!tests"
    ]
  },

  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on",
          "options": {
            "groups": [
              ":NODE:",
              ":BLANK_LINE:",
              ":PACKAGE:",
              ":BLANK_LINE:",
              ":PATH:"
            ]
          }
        }
      }
    }
  },

  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {},

      "complexity": {
        "noForEach": "warn",
        "noUselessLabel": "warn",
        "noUselessRename": "warn",
        "useArrowFunction": "warn",
        "noUselessConstructor": "warn",
        "noAdjacentSpacesInRegex": "warn"
      },

      "correctness": {
        "noUnusedVariables": "off"
      },

      "nursery": {},

      "performance": {},

      "security": {},

      "style": {
        "useEnumInitializers": "off",
        "noNonNullAssertion": "off"
      },

      "suspicious": {
        "noExplicitAny": "off",
        "noWith": "error"
      }
    }
  },

  "formatter": {
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 80
  },

  "javascript": {
    "formatter": {
      "arrowParentheses": "asNeeded",
      "bracketSameLine": false,
      "bracketSpacing": false,
      "jsxQuoteStyle": "single",
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  }
}
